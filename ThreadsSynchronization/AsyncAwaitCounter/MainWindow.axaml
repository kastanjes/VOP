<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="300" Height="250"
        x:Class="AsyncAwaitCounter.MainWindow"
        Title="AsyncAwaitCounter">
    <Grid RowDefinitions="Auto,Auto,Auto">
        <Label x:Name="funLabel" Grid.Row="0" Margin="2,20,0,0" FontSize="24" FontWeight="Bold" FontStyle="Italic" Content="Counter" />
        <TextBox Grid.Row="1" Width="20" Text="0" Name="counterText"></TextBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="14,88,0,0">
            <Button x:Name="startButton" Content="Start" Click="StartHandler" />
            <Button x:Name="stopButton" Content="Stop" Click="StopHandler" />
        </StackPanel>
    </Grid>
</Window>
